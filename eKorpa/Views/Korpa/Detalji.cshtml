@model eKorpa.ViewModels.KorpaDetaljiVM

<table class="table table-dark">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Ime i Prezime</th>
        <th scope="col">Naziv artikla</th>
        <th scope="col">Kategorija</th>
        <th scope="col">Kolicina</th>
        <th scope="col">Cijena</th>
        <th scope="col">Opcija</th>
    </tr>
    </thead>
    <div>
        <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.rows)
            {
                <tr>
                    <td scope="row">@item.ID</td>
                    <td>@item.Kupac</td>
                    <td>@item.NazivArtikla</td>
                    <td>@item.Kategorija</td>
                    <td>@item.kolicina</td>
                    <td>@item.cijena</td>
                    <td><a href="/Korpa/Obrisi?KorpaID=@item.ID">Obrisi</a></td>
                </tr>
            }
        }
        </tbody>
    </div>
</table>
<a href="/Artikal/Index" class="btn btn-secondary">Artikli</a>