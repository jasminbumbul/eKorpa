@page
@model VerifyPhoneModel
@{
    ViewData["Title"] = "Verifikacija broja telefona";
}

<div class="container">
    <h4>@ViewData["Title"]</h4>
    <div class="row">
        <div class="col-md-8">
            <form method="post">
                <p>
                    Verifikacija se vrši slanjem koda na broj @Model.PhoneNumber.
                </p>
                <div asp-validation-summary="All" class="text-danger"></div>
                <button type="submit" class="btn btn-primary">Pošalji kod</button>
            </form>
        </div>
    </div>
</div>