@page
@model ConfirmPhoneModel
@{
    ViewData["Title"] = "Konfirmacija broja telefona";
}

<div class="container">
<h4>@ViewData["Title"]</h4>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <p>
                    Poslali smo konfirmacijski kod na broj @Model.PhoneNumber. <br />
                    Unesite kod koji ste dobili da bi dovršili konfirmaciju.
                </p>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="VerificationCode">Kod</label>
                    <input asp-for="VerificationCode" class="form-control" type="number" />
                    <span asp-validation-for="VerificationCode" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Potvrdi</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}