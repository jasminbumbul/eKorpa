@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Postavi lozinku";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Postavite Vašu lozinku</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="text-info">
    Nemate lokalni email/lozinku za ovaj sajt. Dodajte lokalni račun
    da bi se mogli prijaviti bez vajnskog logina.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword">Nova lozinka</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Potvrda lozinke</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Potvrda lozinke</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}